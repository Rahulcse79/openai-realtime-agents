# ================================
# OpenAI Configuration (SERVER)
# ================================

# OpenAI API Key (REQUIRED)
# Example: sk-proj-xxxxxxxxxxxxxxxx
OPENAI_API_KEY="YOUR_OPENAI_API_KEY"

# Realtime model used by server-side session creation
OPENAI_MODEL="gpt-4o-realtime-preview-2025-06-03"

# Audio transcription model (server-side)
OPENAI_AUDIO_TRANSCRIPTION_MODEL="gpt-4o-mini-transcribe"

# OpenAI Realtime Sessions API URL
OPENAI_API_URL="https://api.openai.com/v1/realtime/sessions"


# ================================
# OpenAI Configuration (CLIENT)
# These are exposed to the browser
# ================================

# Must match server model
NEXT_PUBLIC_OPENAI_MODEL="gpt-4o-realtime-preview-2025-06-03"

# Must match server transcription model
NEXT_PUBLIC_OPENAI_AUDIO_TRANSCRIPTION_MODEL="gpt-4o-mini-transcribe"


# ================================
# Task Management System
# ================================

# Backend API base URL
TASK_BACKEND_BASE_URL="http://localhost:8080/services/api/v2"

# Authorization token or bearer value
TASK_AUTH_TOKEN="YOUR_TASK_AUTH_TOKEN"


# ================================
# SMTP / Email Configuration
# ================================

SMTP_HOST="smtp.example.com"
SMTP_PORT=587
SMTP_SECURE=false

SMTP_USER="no-reply@example.com"
SMTP_PASS="YOUR_SMTP_PASSWORD"
SMTP_FROM="no-reply@example.com"

MAIL_RECIPIENT_1_NAME="Support Team"
MAIL_RECIPIENT_1_EMAIL="support@example.com"


# ================================
# Default Mail Content Templates
# ================================

MAIL_DEFAULT_SUBJECT="AI IVRS Emergency Ticket Created â€“ Issue: {issue_title}"

MAIL_TEXT_PREFIX="Hello {username},\n\nThis is to inform you that an AI IVRS emergency alert ticket has been successfully raised for the {department} Department.\n\nTicket Information\n\nTicket Number: {ticket_no}\nDepartment: {department}\nPriority: Emergency\nStatus: Open\nCreated On: {date_time}\n\nIssue\n{issue_title}\n\nIssue Details\n{issue_details}\n\nThank you for your support and understanding.\n\nBest regards,\nAI IVRS Team\nYour Company Name"


# ================================
# Development Settings
# ================================

# Server binding / runtime
HOSTNAME="0.0.0.0"
PORT=3000
NODE_ENV="production"

# ================================
# HTTPS / TLS (server.js)
# ================================

# Use either a single PEM file (used for both key + cert):
TLS_PEM_PATH="public/wss.pem"

# Or define separate key/cert PEM files (if either is set, BOTH must be set):
# TLS_KEY_PATH="path/to/localhost-key.pem"
# TLS_CERT_PATH="path/to/localhost-cert.pem"

# If you choose to use separate key/cert, uncomment BOTH lines below:
# TLS_KEY_PATH="path/to/localhost-key.pem"
# TLS_CERT_PATH="path/to/localhost-cert.pem"

# Allow all origins during development
NEXT_PUBLIC_ALLOW_ALL_DEV_ORIGINS=true
